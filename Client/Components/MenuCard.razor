@using QND.Core.Models

<div class="card h-100 shadow-sm border-0 product-card">
    <img src="@($"/images/products/{Item.ImageUrl}")"
         class="card-img-top product-image"
         alt="@Item.Name" />

    <div class="card-body d-flex flex-column justify-content-between">
        <div>
            <h5 class="card-title fw-semibold text-primary text-center text-md-start">@Item.Name</h5>
            <p class="card-text text-danger fw-bold fs-5 text-center text-md-start mb-1">
                @Item.Price.ToString("N0") VNĐ
            </p>
            <p class="card-text text-muted small text-center text-md-start">@Item.Description</p>
        </div>

        <div class="d-flex flex-column flex-sm-row align-items-center justify-content-between mt-3 gap-2">
            <div class="input-group input-group-sm" style="max-width: 120px;">
                <button class="btn btn-outline-secondary" @onclick="DecreaseQty">
                    <i class="bi bi-dash"></i>
                </button>
                <input type="text" class="form-control text-center" value="@Quantity" readonly />
                <button class="btn btn-outline-secondary" @onclick="IncreaseQty">
                    <i class="bi bi-plus"></i>
                </button>
            </div>

            <button class="btn btn-success btn-sm rounded-pill px-3 py-2 w-100 w-sm-auto"
                    @onclick="() => AddToCart.InvokeAsync((Item, Quantity))">
                <i class="bi bi-cart-plus"></i> Gọi Món
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public MenuItem Item { get; set; } = default!;
    [Parameter] public EventCallback<(MenuItem, int)> AddToCart { get; set; }

    private int Quantity { get; set; } = 1;

    private void IncreaseQty() => Quantity++;
    private void DecreaseQty() { if (Quantity > 1) Quantity--; }
}
