@* --- QND.Client/Shared/MenuItemCard.razor --- *@
@using QND.Core.Models

<div class="menu-item-card card mb-3 shadow-sm">
    <div class="row g-0">
        @* Cột 1: Hình ảnh (Giả lập) *@
        <div class="col-4 d-flex align-items-center justify-content-center p-2">
            @* Thay thế bằng logic tải ảnh thực tế sau *@
            <div class="item-placeholder-img">
            </div>
        </div>

        @* Cột 2: Thông tin và Thao tác *@
        <div class="col-8">
            <div class="card-body py-2 px-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="item-details">
                        <h6 class="card-title mb-0 fw-bold text-dark">@Item.Name</h6>
                        <p class="card-text text-danger fw-bold fs-6 mb-1">
                            @Item.Price.ToString("N0") VNĐ
                        </p>
                        <p class="card-text small text-muted text-truncate" style="max-width: 150px;">
                            @(string.IsNullOrEmpty(Item.Description) ? "Món ngon đặc biệt." : Item.Description)
                        </p>
                    </div>

                    @* Nút Thêm vào Giỏ hàng *@
                    <button class="btn btn-success btn-sm align-self-end mt-2" @onclick:preventDefault @onclick="() => OnAddToCart.InvokeAsync(Item)">
                        <span class="oi oi-plus"></span> Thêm
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public MenuItem Item { get; set; } = default!;

    [Parameter]
    public EventCallback<MenuItem> OnAddToCart { get; set; }
}